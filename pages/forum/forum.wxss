.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
}
.posts-area {
  flex: 1;
  overflow-y: auto;
  padding: 15px;
}

.post-item {
  background-color: #fff;
  padding: 10px;
  margin-bottom: 10px;
  border-radius: 4px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.post-author {
  font-size: 15px;
  color: rgb(46, 41, 41);
  margin-bottom: 5px;
  font-weight: bold;
}

.post-content {
  width: 100%;
  margin-bottom: 10px;
  padding: 10px;
  border-radius: 4px;
}

.input-area {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 15px;
  background-color: #f8f8f8;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.1);
}

.button-group {
  display: flex;
  justify-content: space-between;
}

button {
  flex-grow: 1;
  margin: 0 5px;
  padding: 10px;
  background-color: #1AAD19;
  color: white;
  border: none;
  border-radius: 4px;
}

.post-button {
  background-color: #1AAD19;
}

.no-posts {
  text-align: center;
  color: #999;
  margin-top: 20px;
}