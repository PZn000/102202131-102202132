.container {
  padding: 20px;
}
.title{
  text-align: center;
  font-size: 30px;
  margin-bottom: 50px;
  margin-top: 50px;
}
.input1 {
  display: flex;
  height: 50px;
  width: 300px;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* 大长方形阴影 */
  align-items: center;
  margin-left: auto; 
  margin-right: auto;
  border-bottom: 1px solid gray;
}
.input2 {
  display: flex;
  height: 50px;
  width: 300px;
  border-bottom-left-radius: 15px;
  border-bottom-right-radius: 15px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* 大长方形阴影 */

  align-items: center;
  margin-left: auto; 
  margin-right: auto;
  border-bottom: 1px solid gray;
}

button {
  margin-top: 30px;
  padding: 10px;
  background-color:rgb(26, 191, 212);
  color: #fff;
  border: none;
}

.login-link,.register-link {
  text-align: center;
  margin-top: 10px;
  color: #007aff;
}

.slogan {
  text-align: center;
  margin-top: 60px;
  font-size: 37px;
  color: #333;
  font-family: serif;
  font-style: italic;
  color: #333;
  font-weight: bold;
}

.checkbox-container {
  margin-top: 100px;
  white-space: nowrap;
}
.component1{
  display: flex;
  align-items: center;
}
.user{
  width: 20%;
  margin-left: 20px;
}
.password{
  width:36%;
  margin-left: 20px;
}
.forgotPassword {
  margin-left: auto;
  text-align: right;
  width:30%;
  color:burlywood;
}
#input2-input{
  margin-left: 20px;
}