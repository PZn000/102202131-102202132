.container {
  padding: 20px;
}

.header {
  text-align: center;
  font-size: 24px;
  margin-bottom: 50px;
  margin-top: 50px;
}

.input-area {
  margin-bottom: 20px;
}

.input-area input {
  height: 50px;
  width: 300px;
  margin-left: auto;
  margin-right: auto;
  box-shadow:  0 0 10px rgba(0, 0, 0, 0.1);
  border-radius: 15px;
  border-bottom: 1px solid gray;
}

.input-area button {
  margin-top: 20px;
  margin-left: auto;
  margin-right: auto;
  padding: 10px;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 4px;
}

.submit-button {
  margin-top: 20px;
  padding: 10px;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 4px;
  width: 100%;
}