/* pages/addProject/addProject.wxss */
.form-container {
  padding: 20px;
}

.form-item {
  margin-bottom: 20px;
}

.form-item text {
  display: block;
  margin-bottom: 10px;
}

.form-item input {
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  
}
.form-item textarea {
  border: 1px solid #ccc;
  width: 99%;
  border-radius: 5px;
}

.form-submit {
  margin-top: 30px;
}

.form-submit button {
  width: 100%;
  padding: 10px;
  background-color: #0ba360;
  color: #fff;
  border: none;
  border-radius: 5px;
}
