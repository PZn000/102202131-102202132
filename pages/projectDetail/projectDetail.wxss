/* 全局表单容器样式 */
.form-container {
  padding: 20px;
  background-color: #f9f9f9;
  position: relative; /* 确保父容器有 relative */
}

/* 每个表单项的样式 */
.form-item {
  margin-bottom: 10px;
  font-size: 16px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

/* 按钮样式 */
.form-submit {
  margin-top: 25px;
}

/* 加入按钮样式 */
.join-btn {
  background-color: #007aff;
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  width: 100%;
  text-align: center;
}

/* 收藏按钮的图片样式，并放置在右下角 */
.collect-icon {
  position: absolute;
  bottom: 10px;  /* 右下角：从底部距离 10px */
  right: 10px;   /* 从右边距离 10px */
  width: 30px;
  height: 30px;
  z-index: 999;  /* 确保按钮在最前面 */
}
