<view class="form-container">
  <view class="form-item">
    <text>项目名称：</text>
    <text>{{project.projectName}}</text>
  </view>
  <view class="form-item">
    <text>项目类型：</text>
    <text>{{project.type}}</text>
  </view>
  <view class="form-item">
    <text>所需专业：</text>
    <text>{{project.majors}}</text>
  </view>
  <view class="form-item">
    <text>时间安排：</text>
    <text>{{project.schedule}}</text>
  </view>
  <view class="form-item">
    <text>联系方式：</text>
    <text>{{project.contact}}</text>
  </view>
  <view class="form-item">
    <text>成员要求：</text>
    <text>{{project.requirements}}</text>
  </view>
  <view class="form-item">
    <text>项目简介：</text>
    <text>{{project.introduction}}</text>
  </view>

  <!-- "申请加入" 按钮 -->
  <view class="form-submit">
    <button class="join-btn" bindtap="applyToJoin">申请加入</button>
  </view>

  <!-- 收藏按钮放到右下角，使用图片 -->
  <image class="collect-icon" src="images/collection.jpg" bindtap="handleCollectClick" />
</view>
