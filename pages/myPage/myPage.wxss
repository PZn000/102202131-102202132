/* 用户信息栏样式 */
.user-info {
  display: flex;
  align-items: center;
  flex-direction: column;
  height: 33%; /* 占屏幕的1/3 */
  padding: 20px;
  background-color: #ffa500; /* 橙黄色背景 */
  position: relative; /* 相对定位，确保编辑按钮相对于它定位 */
}

.avatar {
  margin-bottom: 20px;
}

.avatar-image {
  width: 100px;
  height: 100px;
  border-radius: 50%; /* 圆形 */
  border: 1px solid #ddd; /* 边框 */
}

.personal-details {
  text-align: center;
}

.student-id, .name, .major {
  margin-bottom: 10px;
}

.menu {
  display: flex;
  flex-direction: column;
  padding: 20px;
}

.menu-item {
  margin-bottom: 10px;
  cursor: pointer;
  background-color: #f8f8f8;
  padding: 15px;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
  color: #333;
}

/* 退出账户按钮的样式 */
.menu-item.logout {
  color: red;
  font-weight: bold;
}

/* 编辑按钮样式 */
.edit-btn {
  position: absolute;
  bottom: 15px;
  right: 15px;
}

.icon-button {
  width: 40px;
  height: 40px;
}

.settings-btn {
  position: absolute;
  top: 20px;
  right: 20px;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background: white;
  padding: 20px;
  border-radius: 8px;
  width: 80%;
}

.modal-header, .modal-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.modal-body {
  display: flex;
  flex-direction: column;
}

.project-list .project-item {
  margin-bottom: 10px;
}
