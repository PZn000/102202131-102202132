.tab-bar {
  display: flex;
  background-color: #fff;
  border-top: 1px solid #ddd;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.navigator {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.active {
  background-color: #f0f0f0;
}

.active text {
  color: #007aff;
}